{
	"version": "https://jsonfeed.org/version/1",
	"title": {{ .Site.Title | jsonify  }},
	"description": {{ .Description | jsonify  }},
	"home_page_url": {{.Site.BaseURL | jsonify}},
	"feed_url": {{ .Permalink | jsonify }},
	"user_comment": "",
	"author": {
        "name": {{ if .Site.Params.author }}{{ .Site.Params.author | jsonify }}{{ end }}
    },
    "items": [{{ range $i, $e := first 1000 (where .Site.RegularPages "Type" "in" .Site.Params.feedSections) }}{{ if $i }}, {{ end }}
        {
            "id": {{ .Permalink | jsonify }},
            "url": {{ .Permalink | jsonify }},
            "title": {{ .Title | jsonify }},{{ if .Params.thumbnail }}
            "image": {{ .Params.thumbnail | jsonify }},{{ else }}
            "image": {{ with .Site.Params.image }}{{ .url | absURL | jsonify }},{{ end }}{{ end }}
            "date_published": {{ .Date.Format "2006-02-01T15:04:05-0700" | jsonify }}
        }{{ end }}
    ]
}